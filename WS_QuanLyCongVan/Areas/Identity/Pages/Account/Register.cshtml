            </div>*@
            <div class="space-6"></div>
            <div class="position-relative">
                <div id="signup-box" class="signup-box widget-box no-border">
                    <div class="widget-body">
                        <div class="widget-main">
                            <div class="space-6"></div>
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <fieldset>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.Email">Email</label>
                                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Nhập email" />
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                    <i class="icon-envelope"></i>
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.Hoten_NV"></label>
                                                    <input asp-for="Input.Hoten_NV" class="form-control" autocomplete="Hoten_NV" aria-required="true" mã placeholder="Nhập họ và tên" />
                                                    <span asp-validation-for="Input.Hoten_NV" class="text-danger"></span>
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.DiaChi_NV"></label>
                                                    <input asp-for="Input.DiaChi_NV" class="form-control" autocomplete="DiaChi_NV" aria-required="true" placeholder="Nhập địa chỉ" />
                                                    <span asp-validation-for="Input.DiaChi_NV" class="text-danger"></span>
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.NgaySinh_NV"></label>
                                                    <input asp-for="Input.NgaySinh_NV" class="form-control" autocomplete="NgaySinh_NV" aria-required="true" placeholder="Nhập ngày sinh" />
                                                    <span asp-validation-for="Input.NgaySinh_NV" class="text-danger"></span>
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.SDT_NV"></label>
                                                    <input asp-for="Input.SDT_NV" class="form-control" autocomplete="SDT_NV" aria-required="true" placeholder="Nhập số điện thoại" />
                                                    <span asp-validation-for="Input.SDT_NV" class="text-danger"></span>
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.Password"></label>
                                                    <input asp-for="Input.Password" class="form-control" autocomplete="Password" aria-required="true" placeholder="Nhập mật khẩu" />
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                    <i class="icon-lock"></i>
                                                </span>
                                            </label>
                                            <label class="block clearfix">
                                                <span class="block input-icon input-icon-right">
                                                    <label asp-for="Input.ConfirmPassword"></label>
                                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="ConfirmPassword" aria-required="true" placeholder="Nhập lại mật khẩu" />
                                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                                    <i class="icon-retweet"></i>
                                                </span>
                                            </label>
                                            @*<label class="block">
                                            <input type="checkbox" class="ace">
                                            <span class="lbl">
                                            I accept the
                                            <a href="#">User Agreement</a>
                                            </span>
                                            </label>*@


                                        </fieldset>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label asp-for="Input.Hinh"></label>
                                            <img id="profilePicture" src="~/assets/css/images/avatar/avatar-male.jpg"/>
                                            <div class="">
                                                <label class="custom-file-label" asp-for="Input.Hinh">Chọn hình...</label>
                                                <input type="file" accept="image/*" asp-for="Input.Hinh" class="custom-file-input" onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])"/>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="space-24"></div>

                                <div class="clearfix">
                                    <button type="reset" class="width-30 pull-left btn btn-sm">
                                        <i class="icon-refresh"></i>
                                        Đặt lại mật khẩu
                                    </button>

                                    <button type="submit" class="width-65 pull-right btn btn-sm btn-success">
                                        Tạo mới tài khoảng
                                        <i class="icon-arrow-right icon-on-right"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="toolbar center">
                            <a asp-area="Identity" asp-page="/Account/Login" class="back-to-login-link">
                                <i class="icon-arrow-left"></i>
                                Trở lại trang đăng nhập
                            </a>
                        </div>
                    </div><!-- /widget-body -->
                </div><!-- /signup-box -->
            </div><!-- /position-relative -->
        </div>
    </div>
</div><!-- /.row -->
