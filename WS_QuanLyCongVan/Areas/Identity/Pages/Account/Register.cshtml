@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .custom-file-input{
        height:350px;
        width:350px;
        object-fit:cover;
    }
</style>
<div class="row">
    <div class="col-sm-6">
        <div class="login-container">
            @*<div class="center">
