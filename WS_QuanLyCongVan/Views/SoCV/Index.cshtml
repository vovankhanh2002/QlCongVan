@model DataLayer.Model.Tb_SoCV
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12">
    <div class="widget-box">
        <div class="widget-header">
            <h4>SỔ CÔNG VĂN</h4>
        </div>
        <div class="col-sm-4" style="margin:15px 0">
            <a onclick="showInPopup('@Url.ActionLink("AddOfEdit","SoCV",null,Context.Request.Scheme)',0)" class="btn btn-sm btn-success">Thêm</a>
            <div hidden data-request-url="@Url.ActionLink("AddOfEdit","SoCV")" id="request"></div>
            <button id="delete" disabled data-request-url="@Url.ActionLink("DeleteRangeConfirmed","SoCV")" class="btn btn-sm btn-danger">
                Xóa
            </button>
            <a asp-controller="SoCV" asp-action="indexRestore" class="btn btn-sm btn-info">Thùng rác</a>

        </div>
        <div class="widget-body">
            <div class="widget-main no-padding">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table id="socv" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="center">
                                             <input type="checkbox" id="selectAllCheckbox">
                                        </th>
                                        <th>TÊN LOẠI CÔNG VĂN</th>
                                        <th>NGÀY ĐĂNG KÝ SỔ</th>
                                        <th>LOẠI SỔ</th>
                                        <th>TRẠNG THÁI</th>
                                        <th>GHI CHÚ</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div><!-- /.table-responsive -->
                    </div><!-- /span -->
                </div>

            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/js/jsMain/DanhMucCV/custom.js"></script>
    
}