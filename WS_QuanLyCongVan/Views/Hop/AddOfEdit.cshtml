@model DataLayer.Model.Tb_Hop
@{
    Layout = null;
}
<div class="row">
    <div class="widget-box">
        <div class="widget-header">
            <h4 id="title">HỘP LƯU TRỮ CÔNG VĂN</h4>

            <span class="widget-toolbar">
                <a href="#" data-action="collapse">
                    <i class="icon-chevron-up"></i>
                </a>
            </span>
        </div>

        <div class="widget-body">
            <div class="widget-main">
                <form method="post" asp-action="AddOfEdit" asp-route-id="@Model.Id" onsubmit="return JqueryAjaxPost(this);" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"></>
                    <div class="form-group">
                        <label asp-for="Ten_Hop">Tên hộp lưu trữ</label>
                        <input asp-for="Ten_Hop" class="form-control" autocomplete="Ten_Hop" aria-required="true" />
                        <span asp-validation-for="Ten_Hop" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="ID_Kho">Kho lưu trữ</label>
                                <select asp-for="ID_Kho" asp-items="@ViewBag.getListkho" class="form-select">
                                    <option disabled>-Loại sổ-</option>
                                </select>
                                <span asp-validation-for="ID_Kho" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="ID_Ke">Kệ lưu trữ</label>
                                <select asp-for="ID_Ke" asp-items="@ViewBag.getListke" class="form-select">
                                    <option disabled>-Loại sổ-</option>
                                </select>
                                <span asp-validation-for="ID_Ke" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="GhiChu">Ghi chú</label>
                        <textarea asp-for="GhiChu" class="form-control" rows="5" autocomplete="GhiChu" aria-required="true"></textarea>
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success">Lưu</button>
                    <button type="button" onclick="closePopup()" class="btn btn-sm btn-danger">Đóng</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/js/jsMain/DanhMucLT/custom.js"></script>
    
}


