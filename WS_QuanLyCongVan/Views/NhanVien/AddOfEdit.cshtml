@model DataLayer.Model.Tb_NhanVien
@{
    Layout = null;
}
<div class="row">
    <div class="widget-box">
        <div class="widget-header">
            <h4 id="title">NHÂN VIÊN</h4>

            <span class="widget-toolbar">
                <a href="#" data-action="collapse">
                    <i class="icon-chevron-up"></i>
                </a>
            </span>
        </div>

        <div class="widget-body">
            <div class="widget-main">
                <form method="post" asp-action="AddOfEdit" asp-route-id="@Model.ID" onsubmit="return JqueryAjaxPost(this);" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID"></>
                    <div class="form-group">
                        <label asp-for="Hoten_NV">Họ tên</label>
                        <input asp-for="Hoten_NV" class="form-control" autocomplete="Hoten_NV" aria-required="true" />
                        <span asp-validation-for="Hoten_NV" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaChi_NV">Địa chỉ</label>
                        <input asp-for="DiaChi_NV" class="form-control" autocomplete="DiaChi_NV" aria-required="true" />
                        <span asp-validation-for="DiaChi_NV" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="SDT_NV">Số điện thoại</label>
                                <input asp-for="SDT_NV" class="form-control" autocomplete="SDT_NV" aria-required="true" />
                                <span asp-validation-for="SDT_NV" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="NgaySinh_NV">Ngày sinh</label>
                                <input type="date" asp-for="NgaySinh_NV" class="form-control" autocomplete="NgaySinh_NV" aria-required="true" />
                                <span asp-validation-for="NgaySinh_NV" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="ID_PhongBan">Phòng ban</label>
                                <select asp-for="ID_PhongBan" asp-items="@ViewBag.getListPBan" class="form-select">
                                    <option disabled>-Phòng ban-</option>
                                </select>
                                <span asp-validation-for="ID_PhongBan" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6">
                            <div class="form-group">
                                <label asp-for="ID_ChucVu">Chức vụ</label>
                                <select asp-for="ID_ChucVu" asp-items="@ViewBag.getListCVu" class="form-select">
                                    <option disabled>-Chức vụ-</option>
                                </select>
                                <span asp-validation-for="ID_ChucVu" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="GhiChu">Ghi chú</label>
                        <textarea asp-for="GhiChu" class="form-control" rows="5" autocomplete="GhiChu" aria-required="true"></textarea>
                        <span asp-validation-for="GhiChu" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-sm btn-success">Lưu</button>
                    <button type="button" onclick="closePopup()" class="btn btn-sm btn-danger">Đóng</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/js/jsMain/DanhMucPB/custom.js"></script>
}


