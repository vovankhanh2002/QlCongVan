    <div class="widget-box">
        <div class="widget-header">
            <h4>NHÂN VIÊN</h4>
        </div>
        <div class="col-sm-4" style="margin:15px 0">
            <a onclick="showInPopup('@Url.ActionLink("AddOfEdit","NhanVien",null,Context.Request.Scheme)',0)" class="btn btn-sm btn-success">Thêm</a>
            <div hidden data-request-url="@Url.ActionLink("AddOfEdit","NhanVien")" id="request"></div>
