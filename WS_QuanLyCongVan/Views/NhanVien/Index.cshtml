                                <thead>
                                    <tr>
                                        <th class="center">
                                             <input type="checkbox" id="selectAllCheckbox">
                                        </th>
                                        <th>TÊN NHÂN VIÊN</th>
                                        <th>ĐỊA CHỈ</th>
                                        <th>SỐ ĐIỆN THOẠI</th>
                                        <th>NGÀY SINH</th>
                                        <th>PHÒNG BAN</th>
                                        <th>CHỨC VỤ</th>
                                        <th>GHI CHÚ</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div><!-- /.table-responsive -->
                    </div><!-- /span -->
                </div>

            </div>
        </div>
    </div>
</div>
